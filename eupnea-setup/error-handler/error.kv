#:import hex kivy.utils.get_color_from_hex

<ErrorScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10
        canvas.before:
            Color:
                rgba: hex('#1E1E20')
            Rectangle:
                pos: self.pos
                size: self.size

        
        Label:
            text: 'An unexpected error occurred'
            size_hint_y: None
            height: dp(30)
            font_size: '20sp'
            color: hex('#DFDFD7')
            canvas.before:
                Color:
                    rgba: hex('#1E1E20')
                Rectangle:
                    pos: self.pos
                    size: self.size

        ScrollView:
            id: scrollview
            do_scroll_y: True
            scroll_type: ['bars']
            bar_width: '15dp'
            bar_color: hex('#8A8A8A')
            bar_inactive_color: 0.7, 0.7, 0.7, 1
            on_size: scrollview.scroll_y = 0


            TextInput:
                text: root.load_log_file()
                foreground_color: hex('#C3E88D')
                readonly: True
                background_color: hex('#161618')
                font_size: '15sp'
                padding: 10
                size_hint_y: None
                height: self.minimum_height + dp(30)
                on_text: scrollview.scroll_y = 0


        Button:
            text: 'Export Log'
            on_release: root.show_export()
            size_hint: None, 0.1
            width: self.texture_size[0] + 50
            pos_hint: {'center_x': 0.5}
            background_normal: ''
            background_disabled_normal: ''
            background_active_normal: ''
            background_color: hex('#1E1E20')
            border_color: hex('#525259')
            color: hex('#C3E88D')
            canvas.before:
                Color:
                    rgba: hex('#525259') if self.state == 'normal' else hex('#C3E88D')
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    width: 1.1


<ExportDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Export"
                on_release: root.export(filechooser.path)